<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <style name="AppTheme" parent="AppBaseTheme"></style>
    <style name="DisplayText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#DDD</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ColorButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#DDD</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="ColorButton.HorzLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ColorButton.AbsoluteSizeButton">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

</resources>