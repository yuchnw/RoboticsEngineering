<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="JointLabels" parent="@android:style/TextAppearance">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="JointLabels.Right">
        <item name="android:gravity">right</item>
    </style>

    <style name="DisplayText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#442</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="JointSliders" parent="@android:style/Widget.Holo.Light.SeekBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:max">180</item>
        <item name="android:progress">90</item>
    </style>
    <style name="ColorButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#DDD</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="WheelSpeedButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#DDD</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>